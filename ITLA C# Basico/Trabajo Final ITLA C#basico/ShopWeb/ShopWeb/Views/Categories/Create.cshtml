@model ShopWeb.Data.DTO.CategoriesDTO.CategoriesAddDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Crea categoria</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="categoryname" class="control-label">Nombre de categoría</label>
                <input asp-for="categoryname" class="form-control" maxlength="15"/>
                <span asp-validation-for="categoryname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label">Descripción</label>
                <input asp-for="description" class="form-control" maxlength="200" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creation_date " class="control-label">Fecha de creacion</label>
                <input asp-for="creation_date " class="form-control" />
                <span asp-validation-for="creation_date " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creation_user" class="control-label">Usuario</label>
                <input asp-for="creation_user" class="form-control" />
                <span asp-validation-for="creation_user" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
