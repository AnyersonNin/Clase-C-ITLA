@model ShopWeb.Data.DTO.SuppliersDTO.SuppliersAddDTO

@{
    ViewData["Title"] = "Create"; 
}

<h1>Crear Suplidor</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="companyname" class="control-label">Nombre de la compañia</label>
                <input asp-for="companyname" class="form-control" maxlength="40" />
                <span asp-validation-for="companyname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contactname" class="control-label">Nombre del contacto</label>
                <input asp-for="contactname" class="form-control" maxlength="30" />
                <span asp-validation-for="contactname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contacttitle" class="control-label">Puesto de Trabajo</label>
                <input asp-for="contacttitle" class="form-control" maxlength="30" />
                <span asp-validation-for="contacttitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label">Direccion</label>
                <input asp-for="address" class="form-control" maxlength="60" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label">Ciudad</label>
                <input asp-for="city" class="form-control" maxlength="15" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="region" class="control-label">Region</label>
                <input asp-for="region" class="form-control" maxlength="15" />
                <span asp-validation-for="region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="postalcode" class="control-label">Codigo postal</label>
                <input asp-for="postalcode" class="form-control" maxlength="10" />
                <span asp-validation-for="postalcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="country" class="control-label">Pais</label>
                <input asp-for="country" class="form-control" maxlength="15" />
                <span asp-validation-for="country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone" class="control-label">Tel.</label>
                <input asp-for="phone" class="form-control" maxlength="24" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fax" class="control-label">Fax</label>
                <input asp-for="fax" class="form-control" maxlength="24" />
                <span asp-validation-for="fax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creation_user" class="control-label">Usuario creador</label>
                <input asp-for="creation_user" class="form-control" />
                <span asp-validation-for="creation_user" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creation_date" class="control-label">Fecha de creacion</label>
                <input asp-for="creation_date" class="form-control" />
                <span asp-validation-for="creation_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
