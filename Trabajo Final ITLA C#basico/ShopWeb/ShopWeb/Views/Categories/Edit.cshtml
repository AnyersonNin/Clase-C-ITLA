@model ShopWeb.Data.DTO.CategoriesDTO.CategoriesAddDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="categoryid" class="control-label">Selecciona el ID de la categoria </label>
                <input asp-for="categoryid" class="form-control" />
                <span asp-validation-for="categoryid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="categoryname" class="control-label">Nombre de la categoria</label>
                <input asp-for="categoryname" class="form-control" maxlength="15" />
                <span asp-validation-for="categoryname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label">Descripcion de la categoria</label>
                <input asp-for="description" class="form-control" maxlength="200" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creation_date" class="control-label">Fecha de creacion</label>
                <input asp-for="creation_date" class="form-control" />
                <span asp-validation-for="creation_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creation_user" class="control-label">Usuario que lo creo</label>
                <input asp-for="creation_user" class="form-control" />
                <span asp-validation-for="creation_user" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
